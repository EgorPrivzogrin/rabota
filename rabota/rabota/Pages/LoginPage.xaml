<Page x:Class="rabota.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:rabota.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox x:Name="username"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="password"/>
            <Button x:Name="Login" Content="Войти" Click="Login_Click"/>
            <Button x:Name="registration" Content="Зарегистрироваться" Click="registration_Click"/>
        </StackPanel>
    </Grid>
</Page>
