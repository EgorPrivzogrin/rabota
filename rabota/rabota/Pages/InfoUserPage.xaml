<Page x:Class="rabota.Pages.InfoUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:rabota.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoUserPage" Loaded="Page_Loaded">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button x:Name="Cancel" Content="Выйти" Click="Cancel_Click"/>
                <Label Content="Поиск"/>
                <TextBox x:Name="filter" Width="150" TextChanged="filter_TextChanged"/>
                <Button x:Name="Edit" Content="Редактировать" Margin=" 5 0 0 0" Click="Edit_Click"/>
            </StackPanel>
            <DataGrid x:Name="table"/>
        </DockPanel>
    </Grid>
</Page>
